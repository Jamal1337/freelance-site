<section id="pricing" class="pricing">
  <div class="pricing-container">
    <!-- Header -->
    <header class="pricing-header">
      <div class="header-label">
        <span class="label-number">06</span>
        <span class="label-text">Investment</span>
      </div>
      <h2 class="pricing-title">
        Let's talk about
        <span class="title-accent">your project</span>
      </h2>
    </header>

    <!-- Pricing Cards -->
    <div class="pricing-grid">
      <!-- Project Minimum -->
      <div class="pricing-card">
        <span class="card-label">Project Minimum</span>
        <span class="card-value">€5k</span>
        <p class="card-description">
          Most projects range from €5k–€30k depending on scope and complexity.
          Every engagement starts with a scoping call to understand your needs.
        </p>
        <ul class="card-includes">
          <li>Custom development</li>
          <li>Technical architecture</li>
          <li>Testing & deployment</li>
          <li>Documentation</li>
        </ul>
      </div>

      <!-- Retainer -->
      <div class="pricing-card card-featured">
        <span class="card-badge">Popular</span>
        <span class="card-label">Monthly Retainer</span>
        <span class="card-value">€4k<span class="card-unit">/mo</span></span>
        <p class="card-description">
          Ongoing development and support. Ideal for brands that need continuous
          iteration, maintenance, and new features.
        </p>
        <ul class="card-includes">
          <li>Priority support</li>
          <li>Continuous development</li>
          <li>Monthly strategy call</li>
          <li>Slack/async access</li>
        </ul>
      </div>
    </div>

    <!-- CTA -->
    <div class="pricing-cta">
      <p class="cta-text">Not sure what you need? Let's figure it out together.</p>
      <a href="#contact" class="cta-button">
        Book a free call
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M3 8H13M13 8L8 3M13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .pricing {
    background: #f7f7f7;
    padding: clamp(5rem, 12vw, 8rem) 0;
    position: relative;
  }

  .pricing-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 clamp(1.5rem, 5vw, 4rem);
  }

  /* Header */
  .pricing-header {
    text-align: center;
    margin-bottom: clamp(3rem, 6vw, 4rem);
  }

  .header-label {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .label-number {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #a7a9ac;
    letter-spacing: 0.05em;
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #0c0c0c;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .pricing-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    color: #0c0c0c;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .title-accent {
    color: #0c0c0c;
    position: relative;
    z-index: 1;
    display: inline-block;
  }

  .title-accent::before {
    content: '';
    position: absolute;
    bottom: 0.05em;
    left: -0.1em;
    right: -0.1em;
    height: 0.35em;
    background-color: #00FF9C;
    -webkit-mask: url('/brush-stroke.png') center/100% 100% no-repeat;
    mask: url('/brush-stroke.png') center/100% 100% no-repeat;
    z-index: -1;
  }

  /* Pricing Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: clamp(3rem, 6vw, 4rem);
  }

  .pricing-card {
    background: #ffffff;
    padding: clamp(2rem, 4vw, 2.5rem);
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.06);
    position: relative;
  }

  .pricing-card.card-featured {
    border-color: var(--color-accent);
    box-shadow: 0 4px 24px rgba(0, 255, 156, 0.1);
  }

  .card-badge {
    position: absolute;
    top: -12px;
    right: 2rem;
    background: var(--color-accent);
    color: #0c0c0c;
    padding: 0.375rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: 100px;
  }

  .card-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #a7a9ac;
    margin-bottom: 0.5rem;
  }

  .card-value {
    display: block;
    font-family: var(--font-display);
    font-size: clamp(3rem, 6vw, 4rem);
    font-weight: 700;
    color: #0c0c0c;
    line-height: 1;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
  }

  .card-unit {
    font-size: 0.4em;
    color: #a7a9ac;
    font-weight: 500;
  }

  .card-description {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .card-includes {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .card-includes li {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: #333;
    padding-left: 1.5rem;
    position: relative;
  }

  .card-includes li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  /* CTA */
  .pricing-cta {
    text-align: center;
  }

  .cta-text {
    font-family: var(--font-body);
    font-size: 1rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.125rem 2.5rem;
    font-family: var(--font-display);
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    background: #0c0c0c;
    color: #ffffff;
    transition: all 0.4s var(--ease-out-quart);
  }

  .cta-button:hover {
    background: var(--color-accent);
    color: #0c0c0c;
    transform: translateY(-2px);
  }

  .cta-button svg {
    transition: transform 0.3s var(--ease-out-quart);
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
