---
const steps = [
  {
    number: "01",
    title: "Discovery",
    description: "Tiefes Eintauchen in deine Abläufe. Automatisierungspotenziale identifizieren. Technische Anforderungen erfassen.",
    detail: "Audit & Strategie"
  },
  {
    number: "02",
    title: "Architektur",
    description: "Skalierbare Systeme designen. Integrationen planen. Erfolgskennzahlen und Meilensteine definieren.",
    detail: "System Design"
  },
  {
    number: "03",
    title: "Entwicklung",
    description: "Individuelle Lösungen entwickeln. Rigoroses Testing. Iterative Verfeinerung basierend auf Feedback.",
    detail: "Development"
  },
  {
    number: "04",
    title: "Launch",
    description: "Deployment ohne Ausfallzeit. Team-Schulung. Laufende Optimierung und Support.",
    detail: "Deployment"
  }
];
---

<section id="process" class="process">
  <div class="process-container">
    <!-- Header -->
    <header class="process-header">
      <div class="header-content">
        <div class="header-label">
          <span class="label-number">04</span>
          <span class="label-text">Prozess</span>
        </div>
        <h2 class="process-title">
          Wie großartige Systeme
          <span class="title-accent">zum Leben erwachen</span>
        </h2>
      </div>
      <p class="process-subtitle">
        Ein bewährtes Framework, das Ideen in produktionsreife Automatisierung verwandelt
      </p>
    </header>

    <!-- Timeline -->
    <div class="timeline">
      <div class="timeline-line"></div>

      {steps.map((step, index) => (
        <article class="timeline-step" style={`--step-index: ${index}`}>
          <div class="step-marker">
            <span class="marker-number">{step.number}</span>
            <span class="marker-dot"></span>
          </div>

          <div class="step-content">
            <span class="step-detail">{step.detail}</span>
            <h3 class="step-title">{step.title}</h3>
            <p class="step-description">{step.description}</p>
          </div>

          <div class="step-decoration">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .process {
    background: #ffffff;
    padding: clamp(5rem, 12vw, 10rem) 0;
    position: relative;
  }

  .process-container {
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 clamp(1.5rem, 5vw, 4rem);
  }

  .process-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(2rem, 5vw, 4rem);
    align-items: end;
    margin-bottom: clamp(4rem, 8vw, 6rem);
    padding-bottom: clamp(2rem, 4vw, 3rem);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .header-label {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .label-number {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #a7a9ac;
    letter-spacing: 0.05em;
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #0c0c0c;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .process-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    color: #0c0c0c;
    line-height: 1.05;
    letter-spacing: -0.03em;
  }

  .title-accent {
    color: #0c0c0c;
    position: relative;
    display: inline;
  }

  .title-accent::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: 0;
    right: 0;
    height: 0.3em;
    background: var(--color-accent);
    z-index: -1;
    transform: skewX(-3deg);
  }

  .process-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 1.25vw, 1.125rem);
    color: #a7a9ac;
    max-width: 400px;
    margin-left: auto;
    margin-bottom: 0;
  }

  .timeline {
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: clamp(1rem, 2vw, 2rem);
  }

  .timeline-line {
    position: absolute;
    top: 28px;
    left: 60px;
    right: 60px;
    height: 1px;
    background: rgba(0, 0, 0, 0.1);
  }

  .timeline-step {
    position: relative;
    padding-top: 4rem;
  }

  .step-marker {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .marker-number {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #a7a9ac;
    transition: color 0.4s var(--ease-out-quart);
  }

  .marker-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ffffff;
    border: 2px solid rgba(0, 0, 0, 0.1);
    transition: all 0.4s var(--ease-out-quart);
    position: relative;
    z-index: 2;
  }

  .timeline-step:hover .marker-dot {
    background: var(--color-accent);
    border-color: var(--color-accent);
    transform: scale(1.3);
  }

  .timeline-step:hover .marker-number { color: #0c0c0c; }

  .step-content { padding-right: 1rem; }

  .step-detail {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #0c0c0c;
    background: var(--color-accent);
    padding: 0.375rem 0.75rem;
    border-radius: 100px;
    margin-bottom: 1rem;
  }

  .step-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 700;
    color: #0c0c0c;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    transition: color 0.4s var(--ease-out-quart);
  }

  .step-description {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    line-height: 1.7;
    color: #a7a9ac;
    margin-bottom: 0;
  }

  .step-decoration {
    margin-top: 2rem;
    color: rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.4s var(--ease-out-quart);
  }

  .timeline-step:hover .step-decoration {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-accent);
  }

  @media (max-width: 1024px) {
    .timeline {
      grid-template-columns: repeat(2, 1fr);
      gap: clamp(2rem, 4vw, 3rem);
    }
    .timeline-line { display: none; }
    .timeline-step {
      padding-top: 0;
      padding-left: 3rem;
      border-left: 1px solid rgba(0, 0, 0, 0.1);
    }
    .step-marker {
      left: -6px;
      top: 0;
      flex-direction: row;
      gap: 0;
    }
    .marker-number { display: none; }
  }

  @media (max-width: 768px) {
    .process-header { grid-template-columns: 1fr; }
    .process-subtitle { margin-left: 0; max-width: 500px; }
    .timeline { grid-template-columns: 1fr; }
    .timeline-step { padding-bottom: 2rem; }
    .timeline-step:last-child { padding-bottom: 0; }
  }
</style>
