<style>
  .legal-page {
    background: #ffffff;
    min-height: 100vh;
    padding: clamp(6rem, 10vw, 8rem) 0 clamp(4rem, 8vw, 6rem);
  }

  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 clamp(1.5rem, 5vw, 4rem);
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #0c0c0c;
    margin-bottom: 3rem;
    letter-spacing: -0.02em;
  }

  .legal-section {
    margin-bottom: 2.5rem;
  }

  h2 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: #0c0c0c;
    margin-bottom: 1rem;
  }

  p {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.7;
    color: #666;
    margin-bottom: 1rem;
  }

  a {
    color: #0c0c0c;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  a:hover {
    color: var(--color-accent);
  }

  .back-link {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .back-link a {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    text-decoration: none;
    color: #a7a9ac;
    transition: color 0.3s ease;
  }

  .back-link a:hover {
    color: #0c0c0c;
  }
</style>
